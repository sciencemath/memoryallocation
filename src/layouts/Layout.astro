<style is:global>
	:root {
		--text-color: #adbac7;
		--background-color: rgb(17 24 39);
		--button-primary-color: #1e242c;
	}
	* {
		box-sizing: border-box;
	}
	p {
		margin: 0;
	}
	ul {
		margin: 0;
		padding: 0;
	}
	a {
		color: var(--text-color);
	}
	html {
		font-family: system-ui, sans-serif;
		font-size: 16px;
		color: var(--text-color);
		height: 100vh;
		background-color: var(--background-color);
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	h1, h2, h3, h4, h5, h6 {
		margin: 0;
		margin-bottom: 1rem;
	}
	.content {
		max-width: 800px;
		margin: 0 auto;
		margin-top: 5rem;
		display: grid;
		grid-template-columns: minmax(100px, 20%) 1fr;
	}
	header {
		position: sticky;
		align-self: start;
	}
	.small-logo {
		font-weight: bolder;
		font-size: 2rem;
		margin-bottom: 1.1rem;
	}
	nav {
		display: inline-flex;
		flex-direction: column;
		gap: 0.7rem;
	}
	.content a:hover {
		text-decoration: underline;
	}
	.blog-content ul {
		padding-left: 30px;
	}
	footer {
		text-align: right;
		border-top: 1px solid white;
		grid-column: 1 / 3;
		margin-top: 2rem;
	}
	footer ul {
		display: flex;
		gap: 0.6rem;
		flex-grow: 1;
		list-style: none;
	}
	footer > a {
		visibility: hidden;
	}
	.footer-content {
		display: flex;
		align-items: center;
		margin-top: 0.5rem;
	}
</style>
